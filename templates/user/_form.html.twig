{{ form_start(form) }}
<div class="wrapper border border-2 w-50">

    {{ form_label(form.email, "Email de l'utilisateur", {'label_attr': {'class': 'd-block mx-auto text-center w-25'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'd-block mx-auto form-control text-center w-25 my-3'}}) }}

    {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'd-block mx-auto text-center w-25'}}) }}
    {{ form_widget(form.password, {'attr': {'class': 'd-block mx-auto form-control text-center w-25 my-3'}}) }}

    {{ form_label(form.isVerified, 'Vérification Email', {'label_attr': {'class': 'd-block mx-auto text-center w-25'}}) }}
    {{ form_widget(form.isVerified, {'attr': {'class': 'd-block mx-auto form-control text-center w-25 my-3'}}) }}

    {{ form_label(form.firstName, "Prénom de l'utilisateur", {'label_attr': {'class': 'd-block mx-auto text-center w-25'}}) }}
    {{ form_widget(form.firstName, {'attr': {'class': 'd-block mx-auto form-control text-center w-25 my-3'}}) }}

    {{ form_label(form.lastName, "Nom de l'utilisateur", {'label_attr': {'class': 'd-block mx-auto text-center w-25'}}) }}
    {{ form_widget(form.lastName, {'attr': {'class': 'd-block mx-auto form-control text-center w-25 my-3'}}) }}

    <div class="d-flex justify-content-center">
        <button class="d-block btn btn-warning my-2 mx -2">{{ button_label|default('Ajouter') }}</button>
    </div>
</div>
{{ form_end(form) }}
