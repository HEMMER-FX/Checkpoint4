{% extends 'admin/baseAdmin.html.twig' %}

{% block title %} {{ parent() }} {% trans %} Détails commentaire {% endtrans %} {% endblock %}

{% block body %}
    <h1 class="text-center">{% trans %}Détails du commentaire{% endtrans %}</h1>

    <table class="wrapper border border-2">
        <tbody>
            <tr>
                <th class="px-5 py-2">Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %}Nom de l'auteur{% endtrans %}</th>
                <td>{{ comment.firstName }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %}Commentaire{% endtrans %}</th>
                <td>{{ comment.comment }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-center">
    <a class="d-inline my-3 mx-3 btn btn-primary" href="{{ path('admin_comments_index') }}">{% trans %}Retour à la liste{% endtrans %}</a>

    <a class="d-inline my-3 mx-3 btn btn-warning" href="{{ path('comments_edit', {'id': comment.id}) }}">{% trans %}Modifier{% endtrans %}</a>

    {{ include('admin/admin_comments/_delete_form.html.twig') }}
</div>
{% endblock %}
