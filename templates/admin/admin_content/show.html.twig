{% extends 'admin/baseAdmin.html.twig' %}

{% block title %} {{ parent() }} {% trans %} Détails du contenu {% endtrans %} {% endblock %}

{% block body %}
    <h1 class="text-center">{% trans %}Contenu{% endtrans %}</h1>

    <table class="wrapper border border-2">
        <tbody>
            <tr>
                <th class="px-5 py-2">Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %}Titre du contenu{% endtrans %}</th>
                <td>{{ content.title }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %}Date de création {% endtrans %}</th>
                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %}Ville{% endtrans %}</th>
                <td>{{ content.city }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %}Années{% endtrans %}</th>
                <td>{{ content.year }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %}Descriptif{% endtrans %}</th>
                <td>{{ content.descriptif }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-center">
    <a class="d-inline my-3 mx-3 btn btn-primary" href="{{ path('admin_content_index') }}">{% trans %}Retour à la liste{% endtrans %}</a>

    <a class="d-inline my-3 mx-3 btn btn-warning" href="{{ path('admin_content_edit', {'id': content.id}) }}">{% trans %}Modifier{% endtrans %}</a>

    {{ include('admin/admin_content/_delete_form.html.twig') }}
</div>
{% endblock %}
