{% extends 'admin/baseAdmin.html.twig' %}

{% block title %} {{ parent() }} {% trans %} Article {% endtrans %} {% endblock %}

{% block body %}
    <h1 class="text-center my-5">Article index</h1>

    <button type="button" class="d-block mx-auto btn btn-warning my-5">
        <a href="{{ path('admin_article_new') }}"> {% trans %}Ajouter article{% endtrans %}</a>
    </button>


    <table class="wrapper border border-2">
        <thead>
            <tr class="text-uppercase text-center">
                <th>Id</th>
                <th>{% trans %}Titre de l'article{% endtrans %}</th>
                <th>{% trans %}Contenu{% endtrans %}</th>
                <th>{% trans %}Image{% endtrans %}</th>
                <th>{% trans %}Créer le :{% endtrans %}</th>
                <th>{% trans %}Mis à jour le :{% endtrans %}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr class="text-center border">
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.poster }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="d-block my-2 mx-2 btn btn-primary" href="{{ path('admin_article_show', {'id': article.id}) }}">{% trans %}Détails{% endtrans %}</a>
                    <a class="d-block my-2 mx-2 btn btn-warning" href="{{ path('admin_article_edit', {'id': article.id}) }}">{% trans %}Modification{% endtrans %}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{% trans %}Pas de résultat à afficher{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
